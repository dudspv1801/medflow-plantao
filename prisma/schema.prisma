generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ActionType {
  CREATE
  UPDATE
  DELETE
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String
  actionType  ActionType
  resourceType String?
  resourceId  String
  changes     Json
  metadata    Json
  timestamp   DateTime
  hash        String   @unique
  prevHash    String?
  signature   String
  keyId       String?
  createdAt   DateTime @default(now())

  @@index([resourceId])
  @@index([timestamp])
}
